ip addr add dev eth0 10.2.2.2/24
ip -6 addr add dev eth0 2001:0:2:2::2/64
ip link set dev eth0 up
ip addr add dev eth1 10.3.3.2/24
ip -6 addr add dev eth1 2001:0:3:3::2/64
ip link set dev eth1 up

# Zebra and OSPF
/etc/init.d/quagga restart

# wait for default route information from OSPF
while ! $(ip route | grep -q "default")
do
	sleep 2
done

echo VTYSH_PAGER=more > /etc/environment
